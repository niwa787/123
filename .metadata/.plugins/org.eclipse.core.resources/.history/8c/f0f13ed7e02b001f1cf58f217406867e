<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Best Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-4 m-4">
                <h2 class="text-center mb-5">建立表單</h2>
                
                <form method="post" enctype="multipart/form-data" th:object="${productDto}" th:action="@{/products/create}">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">題目</label>
                        <div class="col-sm-8">
                            <input class="form-control" th:field="${productDto.name}">
                            <p th:if="${#fields.hasErrors('name')}" th:errorclass="text-danger" th:errors="${productDto.name}"></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">題目類型</label>
                        <div class="col-sm-8">
                            <select class="form-select" th:field="${productDto.category}" id="questionType" onchange="showOptions()">
                                <option value="">請選擇</option>
                                <option value="單選">單選</option>
                                <option value="多選">多選</option>
                                <option value="簡答">簡答</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">問題敘述</label>
                        <div class="col-sm-8" id="descriptionContainer">
                            <textarea class="form-control" th:field="${productDto.brand}"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">選項描述</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" th:field="${productDto.description}"></textarea>
                            <p th:if="${#fields.hasErrors('description')}" th:errorclass="text-danger" th:errors="${productDto.description}"></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">狀態</label>
                        <div class="col-sm-8">
                            <select class="form-select" th:field="${productDto.status}">
                                <option value='暫存'>暫存</option>
                                <option value='已結束'>已結束</option>
                                <option value='開放中'>開放中</option>
                                <option value='未開放'>未開放</option>
                            </select>
                            <p th:if="${#fields.hasErrors('status')}" th:errorclass="text-danger" th:errors="${productDto.status}"></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">照片上傳</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="file" th:field="${productDto.imageFile}">
                            <p th:if="${#fields.hasErrors('imageFile')}" th:errorclass="text-danger" th:errors="${productDto.imageFile}"></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">截止日期</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" th:field="${productDto.createdAt}">
                            <p th:if="${#fields.hasErrors('createdAt')}" th:errorclass="text-danger" th:errors="${productDto.createdAt}"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
